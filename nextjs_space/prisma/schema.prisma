generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  password      String?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  accounts      Account[]
  sessions      Session[]
  creatorDesigns CreatorDesign[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model School {
  id           String       @id @default(cuid())
  name         String
  address      String?
  logoPath     String?
  logoIsPublic Boolean      @default(false)
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  genericLogos Logo[]
  logos        SchoolLogo[]
  teams        Team[]
  creatorDesigns CreatorDesign[]
}

model Team {
  id                String             @id @default(cuid())
  name              String
  schoolId          String
  logoPath          String?
  logoIsPublic      Boolean            @default(false)
  primaryColor      String?
  secondaryColor    String?
  address           String?
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  genericLogos      Logo[]
  manufacturerLogos ManufacturerLogo[]
  projects          Project[]
  school            School             @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  creatorDesigns   CreatorDesign[]
}

model Project {
  id           String   @id @default(cuid())
  name         String
  teamId       String
  season       String?
  year         Int?
  description  String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  items        Item[]
  genericLogos Logo[]
  team         Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  creatorDesigns CreatorDesign[]
}

model Item {
  id                 String              @id @default(cuid())
  name               String
  projectId          String
  templateId         String?
  status             String              @default("draft")
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  designInstructions DesignInstruction[]
  variants           DesignVariant[]
  generatedFiles     GeneratedFile[]
  project            Project             @relation(fields: [projectId], references: [id], onDelete: Cascade)
  template           Template?           @relation(fields: [templateId], references: [id])
  genericLogos       Logo[]
  creatorDesigns    CreatorDesign[]
}

model Template {
  id           String   @id @default(cuid())
  name         String
  category     String
  filePath     String?
  fileIsPublic Boolean  @default(false)
  svgPath      String?
  svgIsPublic  Boolean  @default(false)
  layerData    String?
  description  String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  items        Item[]
}

model ManufacturerLogo {
  id           String   @id @default(cuid())
  name         String
  filePath     String
  fileIsPublic Boolean  @default(false)
  isDefault    Boolean  @default(false)
  teamId       String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  team         Team?    @relation(fields: [teamId], references: [id], onDelete: Cascade)
}

model DesignInstruction {
  id             String          @id @default(cuid())
  itemId         String
  instruction    String
  parsedData     String?
  status         String          @default("pending")
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  item           Item            @relation(fields: [itemId], references: [id], onDelete: Cascade)
  generatedFiles GeneratedFile[]
}

model GeneratedFile {
  id                  String             @id @default(cuid())
  itemId              String
  designInstructionId String?
  fileType            String
  fileName            String
  filePath            String
  fileIsPublic        Boolean            @default(false)
  createdAt           DateTime           @default(now())
  designInstruction   DesignInstruction? @relation(fields: [designInstructionId], references: [id])
  item                Item               @relation(fields: [itemId], references: [id], onDelete: Cascade)
}

model Pattern {
  id                String   @id @default(cuid())
  name              String
  category          String
  description       String?
  filePath          String
  fileIsPublic      Boolean  @default(false)
  svgPath           String?
  svgIsPublic       Boolean  @default(false)
  thumbnailPath     String?
  thumbnailIsPublic Boolean  @default(false)
  colors            String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([category])
}

model Embellishment {
  id                String   @id @default(cuid())
  name              String
  category          String?
  description       String?
  filePath          String
  fileIsPublic      Boolean  @default(false)
  svgPath           String?
  svgIsPublic       Boolean  @default(false)
  thumbnailPath     String?
  thumbnailIsPublic Boolean  @default(false)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([category])
}

model DesignVariant {
  id              String      @id @default(cuid())
  itemId          String
  variantName     String
  configuration   String
  status          String      @default("preview")
  previewSvgPath  String?
  previewIsPublic Boolean     @default(true)
  finalAiPath     String?
  finalAiIsPublic Boolean     @default(false)
  errorMessage    String?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  bridgeJobs      BridgeJob[]
  item            Item        @relation(fields: [itemId], references: [id], onDelete: Cascade)

  @@index([itemId])
  @@index([status])
}

model Font {
  id              String   @id @default(cuid())
  name            String
  fontFamily      String
  category        String
  filePath        String?
  fileIsPublic    Boolean  @default(false)
  isSystemFont    Boolean  @default(false)
  previewImage    String?
  previewIsPublic Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([category])
}

model Color {
  id          String   @id @default(cuid())
  name        String
  hexCode     String   @unique
  pantoneCode String?
  category    String?
  isCustom    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([category])
  @@index([isCustom])
}

model SchoolLogo {
  id           String   @id @default(cuid())
  schoolId     String
  name         String
  logoPath     String
  logoIsPublic Boolean  @default(false)
  isDefault    Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  school       School   @relation(fields: [schoolId], references: [id], onDelete: Cascade)

  @@index([schoolId])
  @@index([isDefault])
}

model Logo {
  id           String   @id @default(cuid())
  name         String
  description  String?
  logoPath     String
  logoIsPublic Boolean  @default(false)
  schoolId     String?
  teamId       String?
  projectId    String?
  itemId       String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  item         Item?    @relation(fields: [itemId], references: [id])
  project      Project? @relation(fields: [projectId], references: [id])
  school       School?  @relation(fields: [schoolId], references: [id])
  team         Team?    @relation(fields: [teamId], references: [id])

  @@index([schoolId])
  @@index([teamId])
  @@index([projectId])
  @@index([itemId])
}

model BridgeJob {
  id           String        @id @default(cuid())
  variantId    String
  status       String        @default("pending")
  priority     Int           @default(0)
  errorMessage String?
  startedAt    DateTime?
  completedAt  DateTime?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  variant      DesignVariant @relation(fields: [variantId], references: [id], onDelete: Cascade)

  @@index([variantId])
  @@index([status])
  @@index([priority, createdAt])
}

model CreatorDesign {
  id           String    @id @default(cuid())
  name         String
  userId       String
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  schoolId     String?
  school       School?   @relation(fields: [schoolId], references: [id], onDelete: SetNull)
  teamId       String?
  team         Team?     @relation(fields: [teamId], references: [id], onDelete: SetNull)
  projectId    String?
  project      Project?  @relation(fields: [projectId], references: [id], onDelete: SetNull)
  itemId       String?
  item         Item?     @relation(fields: [itemId], references: [id], onDelete: SetNull)
  designData   String    @db.Text // JSON string of design configuration
  previewImage String?   // URL to a preview image
  apparelType  String    @default("tshirt") // e.g., "tshirt", "hoodie"
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@index([userId])
  @@index([schoolId])
  @@index([teamId])
  @@index([projectId])
  @@index([itemId])
}
