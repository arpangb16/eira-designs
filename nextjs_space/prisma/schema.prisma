generator client {
    provider = "prisma-client-js"
    binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
    output = "/home/ubuntu/apparel_design_manager/nextjs_space/node_modules/.prisma/client"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  password      String?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  accounts      Account[]
  sessions      Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model School {
  id                 String       @id @default(cuid())
  name               String
  address            String?
  logoPath           String?
  logoIsPublic       Boolean      @default(false)
  createdAt          DateTime     @default(now())
  updatedAt          DateTime     @updatedAt
  teams              Team[]
  logos              SchoolLogo[]
  genericLogos       Logo[]
}

model Team {
  id                 String              @id @default(cuid())
  name               String
  schoolId           String
  school             School              @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  logoPath           String?
  logoIsPublic       Boolean             @default(false)
  primaryColor       String?
  secondaryColor     String?
  address            String?
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  projects           Project[]
  manufacturerLogos  ManufacturerLogo[]
  genericLogos       Logo[]
}

model Project {
  id           String   @id @default(cuid())
  name         String
  teamId       String
  team         Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  season       String?
  year         Int?
  description  String?  @db.Text
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  items        Item[]
  genericLogos Logo[]
}

model Item {
  id                  String              @id @default(cuid())
  name                String
  projectId           String
  project             Project             @relation(fields: [projectId], references: [id], onDelete: Cascade)
  templateId          String?
  template            Template?           @relation(fields: [templateId], references: [id], onDelete: SetNull)
  status              String              @default("draft")
  createdAt           DateTime            @default(now())
  updatedAt           DateTime            @updatedAt
  designInstructions  DesignInstruction[]
  generatedFiles      GeneratedFile[]
  variants            DesignVariant[]
  genericLogos        Logo[]
}

model Template {
  id           String   @id @default(cuid())
  name         String
  category     String
  filePath     String
  fileIsPublic Boolean  @default(false)
  svgPath      String?
  svgIsPublic  Boolean  @default(false)
  layerData    String?  @db.Text
  description  String?  @db.Text
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  items        Item[]
}

model ManufacturerLogo {
  id          String   @id @default(cuid())
  name        String
  filePath    String
  fileIsPublic Boolean @default(false)
  isDefault   Boolean  @default(false)
  teamId      String?
  team        Team?    @relation(fields: [teamId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model DesignInstruction {
  id              String          @id @default(cuid())
  itemId          String
  item            Item            @relation(fields: [itemId], references: [id], onDelete: Cascade)
  instruction     String          @db.Text
  parsedData      String?         @db.Text
  status          String          @default("pending")
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  generatedFiles  GeneratedFile[]
}

model GeneratedFile {
  id                  String             @id @default(cuid())
  itemId              String
  item                Item               @relation(fields: [itemId], references: [id], onDelete: Cascade)
  designInstructionId String?
  designInstruction   DesignInstruction? @relation(fields: [designInstructionId], references: [id], onDelete: SetNull)
  fileType            String
  fileName            String
  filePath            String
  fileIsPublic        Boolean            @default(false)
  createdAt           DateTime           @default(now())
}

// Pattern Library (stripes, stars, squares, etc.)
model Pattern {
  id                String   @id @default(cuid())
  name              String
  category          String   // "body", "inseam", "cuff", etc.
  description       String?  @db.Text
  filePath          String   // S3: pattern_body_stripes.ai
  fileIsPublic      Boolean  @default(false)
  svgPath           String?  // For web preview
  svgIsPublic       Boolean  @default(false)
  thumbnailPath     String?
  thumbnailIsPublic Boolean  @default(false)
  colors            String?  @db.Text // JSON array of hex colors used in pattern
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([category])
}

// Embellishment Library (eagle claw, tiger, etc.)
model Embellishment {
  id                String   @id @default(cuid())
  name              String
  category          String?  // "animal", "abstract", "team-specific"
  description       String?  @db.Text
  filePath          String   // S3: embellishment_eagle_claw.ai
  fileIsPublic      Boolean  @default(false)
  svgPath           String?
  svgIsPublic       Boolean  @default(false)
  thumbnailPath     String?
  thumbnailIsPublic Boolean  @default(false)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([category])
}

// Design Variants (each combination preview)
model DesignVariant {
  id              String   @id @default(cuid())
  itemId          String
  item            Item     @relation(fields: [itemId], references: [id], onDelete: Cascade)
  variantName     String
  configuration   String   @db.Text // JSON: { bodyColor: "#FFD700", bodyPattern: "stripes", logoPosition: "A", ... }
  status          String   @default("preview") // "preview" | "selected" | "generating" | "generated" | "failed"
  previewSvgPath  String?
  previewIsPublic Boolean  @default(true)
  finalAiPath     String?
  finalAiIsPublic Boolean  @default(false)
  errorMessage    String?  @db.Text
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([itemId])
  @@index([status])
}

// Font Library
model Font {
  id              String   @id @default(cuid())
  name            String
  fontFamily      String   // CSS font-family value
  category        String   // "sans-serif", "serif", "script", "display"
  filePath        String?  // S3: custom_font.otf (for custom fonts)
  fileIsPublic    Boolean  @default(false)
  isSystemFont    Boolean  @default(false) // true for web-safe fonts
  previewImage    String?  // Preview image showing the font
  previewIsPublic Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([category])
}

// Color Library (Pantone + Custom)
model Color {
  id          String   @id @default(cuid())
  name        String
  hexCode     String   @unique
  pantoneCode String?  // e.g., "PANTONE 185 C"
  category    String?  // "red", "blue", "green", etc.
  isCustom    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([category])
  @@index([isCustom])
}

// School Logos (multiple logos per school with default)
model SchoolLogo {
  id           String   @id @default(cuid())
  schoolId     String
  school       School   @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  name         String   // "Primary Logo", "Secondary Logo", "Mascot"
  logoPath     String
  logoIsPublic Boolean  @default(false)
  isDefault    Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([schoolId])
  @@index([isDefault])
}

// Generic Logo Library (can be associated with schools, teams, projects, or items - all optional)
model Logo {
  id           String   @id @default(cuid())
  name         String
  description  String?  @db.Text
  logoPath     String
  logoIsPublic Boolean  @default(false)
  
  // Optional associations
  schoolId     String?
  school       School?  @relation(fields: [schoolId], references: [id], onDelete: SetNull)
  teamId       String?
  team         Team?    @relation(fields: [teamId], references: [id], onDelete: SetNull)
  projectId    String?
  project      Project? @relation(fields: [projectId], references: [id], onDelete: SetNull)
  itemId       String?
  item         Item?    @relation(fields: [itemId], references: [id], onDelete: SetNull)
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([schoolId])
  @@index([teamId])
  @@index([projectId])
  @@index([itemId])
}
